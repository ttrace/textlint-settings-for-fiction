{
    "rules": {
        "@textlint-ja/morpheme-match": {
            "dictionaryPathList": ["dict/morpheme-match-dict.js"]
        },
        "prh": {
            "rulePaths" :[
                "dict/prh-rule.yml",
                "dict/prh-local-rule.yml"
                ]
        },
        "preset-jtf-style": {
            "1.1.1.本文": false,
            "2.1.9.アルファベット": false,
            "4.2.9.ダッシュ(-)": false,
            "2.1.8.算用数字": false,
            "2.2.2.算用数字と漢数字の使い分け": false
        },
        "general-novel-style-ja": {
            "chars_leading_paragraph": false,
            "max_arabic_numeral_digits": 4
        }
    }
}